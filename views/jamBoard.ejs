<body>
    <div class = "whiteboard" >
    <div class = "controls"> 
    <div class = "color-pallette">
        <label for="color-selector"> Choose Color : </label>
        <input type="color" id = "color-selector" value="#000000">
    </div>
    <div class="thickness"> 
        <input type="range" min="1" max="10" value="5" class="slider" id="size" oninput="set_pen_thickness()">
         <p>Value: <span id="val"></span></p>
         <script>
            let slider = document.getElementById('size'); 
            let value = document.getElementById('val'); 
            value.innerHTML = slider.value; 
        </script>
    </div>
    <div class = "buttons">
    <button id ="Save" type = "button" onclick="save()" >Save</button>        
    <button id ="newCanvas" type="button" onclick = "reset_board()"> New</button>
    </div>
    </div>
    <div class="canvas">
        <canvas style="background-color: lightskyblue;  border : double 7px black;  display : flex ; justify-content: centre " id="board" width="1600" height="700" ></canvas>
    </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/p5.js/0.5.6/p5.min.js"></script>
